# Initialize the register to be decremented to some non-zero number, and
# decrement it until it drops to zero.
        mov 12345, %r0
$loop:
        sub %r0, 1, %r0
        bne %r0, 0, $loop

# Print the final value of the register, which is supposed to be zero.
        printfixnum %r0
