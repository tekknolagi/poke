#!@SHELL@

# Include my little testsuite library.  Among the rest this sourcing enters the
# directory containing *this* script (not the utility script).
. "@abs_top_builddir@/tests/utility"

# Print a range for test case indices.
echo 1..14

# Initialize and finalize the Uninspired VM system in a for loop.
jitter_run_case_with_and_without_valgrind "init-fini 0 times" \
  @JITTER_EMULATOR@ ./uninspired-init-fini 0
jitter_run_case_with_and_without_valgrind "init-fini once" \
  @JITTER_EMULATOR@ ./uninspired-init-fini 1
jitter_run_case_with_and_without_valgrind "init-fini 100 times" \
  @JITTER_EMULATOR@ ./uninspired-init-fini 100

# Initialize the Uninspired VM system, parse an Uninspired program from a file
# containing just comments, specialize the program, destroy it and finalize the
# VM system -- all in a for loop.
program="@srcdir@/empty.vm"
jitter_run_case_with_and_without_valgrind "load empty program once" \
  @JITTER_EMULATOR@ ./uninspired-init-fini 1 "$program"
jitter_run_case_with_and_without_valgrind "load empty program 100 times" \
  @JITTER_EMULATOR@ ./uninspired-init-fini 100 "$program"

# Initialize the Uninspired VM system, parse a nonempty Uninspired program from
# a file, specialize the program, destroy it and finalize the VM system -- all
# in a for loop.
program="@abs_top_srcdir@/example-vms/uninspired/examples/euclid.vm"
jitter_run_case_with_and_without_valgrind "load non-empty program once" \
  @JITTER_EMULATOR@ ./uninspired-init-fini 1 "$program"
jitter_run_case_with_and_without_valgrind "load non-empty program 100 times" \
  @JITTER_EMULATOR@ ./uninspired-init-fini 100 "$program"
